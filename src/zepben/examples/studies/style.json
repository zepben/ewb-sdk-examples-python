[
  {
    "id": "ec-heatmap",
    "type": "heatmap",
    "paint": {
      "heatmap-opacity": 0.5
    }
  },
  {
    "id": "lv-lines",
    "type": "line",
    "paint": {
      "line-color": "yellow",
      "line-width": 5,
      "line-opacity": 0.5
    }
  },
  {
    "id": "lv-lengths",
    "type": "symbol",
    "layout": {
      "symbol-placement": "line",
      "text-field": ["to-string", ["round", ["get", "length"]]],
      "text-font": ["Arial Unicode MS Regular"],
      "text-size": 15
    },
    "paint": {
      "text-color": "black",
      "text-halo-blur": 5,
      "text-halo-width": 5,
      "text-halo-color": "white"
    }
  }
]